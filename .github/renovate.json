{
  "assignees": ["Dafnik"],
  "baseBranchPatterns": ["main"],
  "commitBody": "See associated pull request for more information.",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": ["infrastructure/versions.env"],
      "matchStrings": ["IMAGE=\"(?<depName>.+?):(?<currentValue>.+)\" # renovate"]
    }
  ],
  "extends": [
    "config:recommended",
    ":pinVersions",
    "security:minimumReleaseAgeNpm",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "automerge": true,
    "automergeType": "branch",
    "commitMessageAction": "lock file maintenance",
    "enabled": true,
    "semanticCommitType": "chore(deps)"
  },
  "packageRules": [
    {
      "groupName": "typescript types",
      "matchPackageNames": ["/^@types/i"]
    },
    {
      "groupName": "typescript dependencies",
      "matchPackageNames": ["typescript", "tslib"]
    },
    {
      "extends": ["monorepo:angular"],
      "groupName": "angular monorepo"
    },
    {
      "extends": ["monorepo:angular-cli"],
      "groupName": "angular monorepo"
    }
  ],
  "prHourlyLimit": 5,
  "schedule": ["* * 1,15 * *"],
  "semanticCommitScope": "",
  "semanticCommitType": "build",
  "semanticCommits": "enabled",
  "timezone": "Europe/Vienna"
}
