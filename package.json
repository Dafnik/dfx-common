{
  "name": "dfx-common",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "build": "ng build dfx-bootstrap-table && ng build dfx-bootstrap-table-demo && ng build dfx-helper && ng build dfx-openapi && ng build dfx-qrcode && ng build dfx-qrcode-demo",
    "test": "ng test dfx-bootstrap-table --watch false && ng test dfx-helper --watch false && ng test dfx-openapi --watch false && ng build dfx-qrcode --watch false",
    "build:playground": "pnpm -C apps/playground build",
    "preview:playground": "pnpm -C apps/playground preview",
    "format:check": "PRETTIER_EXPERIMENTAL_CLI=1 prettier --check .",
    "format": "PRETTIER_EXPERIMENTAL_CLI=1 prettier --write .",
    "lint": "ng lint dfx-bootstrap-table && ng lint dfx-helper && ng lint dfx-openapi && ng lint dfx-qrcode",
    "http:dfx-qrcode-demo": "ng build dfx-qrcode-demo && angular-http-server --path ./dist/dfx-qrcode-demo/browser --baseHref qrcode",
    "http:dfx-bootstrap-table-demo": "ng build dfx-bootstrap-table-demo && angular-http-server --path ./dist/dfx-bootstrap-table-demo/browser --baseHref bootstrap-table",
    "http:playground": "pnpm build:playground && http-server ./apps/playground/dist/"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "21.0.3",
    "@angular/common": "21.0.5",
    "@angular/compiler": "21.0.5",
    "@angular/core": "21.0.5",
    "@angular/forms": "21.0.5",
    "@angular/platform-browser": "21.0.5",
    "@angular/platform-server": "21.0.5",
    "@angular/router": "21.0.5",
    "@angular/ssr": "21.0.3",
    "bootstrap": "5.3.8",
    "dfts-helper": "2.1.0",
    "dfts-qrcode": "1.1.1",
    "express": "5.2.1",
    "openapi-typescript-helpers": "0.0.15",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular/build": "21.0.3",
    "@angular/cli": "21.0.3",
    "@angular/compiler-cli": "21.0.5",
    "@eslint/js": "9.39.1",
    "@tailwindcss/postcss": "4.1.18",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/express": "5.0.6",
    "@types/node": "24.10.3",
    "@vitest/coverage-v8": "4.0.15",
    "angular-eslint": "21.1.0",
    "angular-http-server": "1.12.0",
    "eslint": "9.39.1",
    "git-cliff": "2.10.1",
    "http-server": "14.1.1",
    "jsdom": "27.3.0",
    "ng-packagr": "21.0.0",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-organize-attributes": "1.0.0",
    "prettier-plugin-sort-json": "4.1.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0",
    "vitest": "4.0.15",
