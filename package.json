{
  "name": "dfx-common",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:playground": "pnpm -C projects/playground build",
    "preview:playground": "pnpm -C projects/playground preview",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:dfx-bootstrap-table-demo": "node dist/dfx-bootstrap-table-demo/server/server.mjs",
    "serve:ssr:dfx-qrcode-demo": "node dist/dfx-qrcode-demo/server/server.mjs",
    "format:check": "PRETTIER_EXPERIMENTAL_CLI=1 prettier --check .",
    "format": "PRETTIER_EXPERIMENTAL_CLI=1 prettier --write ."
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "21.0.2",
    "@angular/common": "21.0.3",
    "@angular/compiler": "21.0.3",
    "@angular/core": "21.0.3",
    "@angular/forms": "21.0.3",
    "@angular/platform-browser": "21.0.3",
    "@angular/platform-server": "21.0.3",
    "@angular/router": "21.0.3",
    "@angular/ssr": "21.0.2",
    "bootstrap": "5.3.8",
    "dfts-helper": "^2.0.0",
    "dfts-qrcode": "^1.1.0",
    "express": "5.2.1",
    "openapi-typescript-helpers": "0.0.15",
    "rxjs": "7.8.2",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular/build": "21.0.2",
    "@angular/cli": "21.0.2",
    "@angular/compiler-cli": "21.0.3",
    "@tailwindcss/postcss": "4.1.17",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/express": "5.0.6",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "jsdom": "27.2.0",
    "ng-packagr": "21.0.0",
    "postcss": "8.5.6",
    "prettier": "3.7.4",
    "prettier-plugin-organize-attributes": "1.0.0",
    "prettier-plugin-sort-json": "4.1.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  }
}
